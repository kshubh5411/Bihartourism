<% include ../partials/header %>
<div class="container">
    <h1 style="text-align: center;"><strong> Edit Your Comment</strong></h1>
    <div class="row">
        <div style="width:30%;margin: 0 auto;">
           <form action="/campgrounds/<%=campground_id%>/comment/<%=comment._id%>?_method=PUT" method="POST">
                
                <div class="form-group">
                    <label for="Comment">Description:</label>
                       <textarea class="form-control" rows="10" name="comment[text]">
                         <%=comment.text%>
                       </textarea>
                </div>
                <div class="form-group">
                  <button class="btn btn-info btn-lg btn-block">Submit Edit</button>
                </div>
            </form> 
        </div>
    </div>
    
</div>

